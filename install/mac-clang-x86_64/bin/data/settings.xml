<settings>
  <window_width>1024</window_width>
  <window_height>768</window_height>
  <ocean>
    <wind_force_x>20.5</wind_force_x>
    <wind_force_y>20.5</wind_force_y>
    <size>250</size> <!-- in meters -->
  </ocean>

  <!-- 1.3, 1.8 (for installation) or 0.3, 1.2 (for desktop) --> 
  <kinect_near>0.3</kinect_near> <!-- everything before this distance is not used -->
  <kinect_far>1.2</kinect_far> <!-- everything after this point is not used -->

  <colors>
    <color>
      <hand>
        <!-- spring: pink -->
        <r>255</r>
        <g>201</g>
        <b>51</b>
      </hand>
      <spiral_from>
        <r>255</r>
        <g>201</g>
        <b>51</b>
      </spiral_from>
      <spiral_to>
        <!-- spring: red -->
        <r>23</r>
        <g>106</g>
        <b>182</b>
      </spiral_to>
      <flow_lines>
        <!-- spring: gray -->
        <r>123</r>
        <g>189</g>
        <b>243</b>
      </flow_lines>
    </color>
  </colors>

</settings>

